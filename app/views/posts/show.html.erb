<div class="max-w-3xl mx-auto p-4">
  <h1 class="text-3xl font-semibold mb-4"><%=@post.title%></h1>
  <p class="text-gray-600 mb-2">by <%= @user.name %> </p>


  <div class="prose prose-lg">
    <%= @post.text.html_safe %>
  </div>
<div class="flex flex-row justify-end gap-4
">
  <p class="text-gray-600">Comments: <%= @post.comments_counter %></p>
  <p class="text-gray-600">Likes: <%= @post.likes_counter %></p>
</div>

  <div class="mt-8">
    <h2 class="text-xl font-semibold mb-4">Comments:</h2>
    <% @comments.each do |comment|%>
<div class="mb-4 flex flex-row items-center justify-start gap-3">

        <p class="font-semibold">
          <%= comment.user.name %>:

        </p>
        <p>
          <%= comment.text %>
        </p>
      </div>
    <% end %>
  </div>
</div>

