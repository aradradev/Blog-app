<ul class="space-y-4">
  <% @posts.each do |post| %>
    <li class="bg-white shadow-md p-4 rounded-lg">
      <h2 class="text-2xl font-semibold mb-2">
        <%= link_to post.title, post, class: "text-blue-500 hover:underline" %>
      </h2>
      <p class="text-gray-700 mb-2"><%= post.text %></p>
      <p class="text-gray-600">Author: <%= post.author.name %></p>
      <p class="text-gray-600">Comments: <%= post.comments_counter %></p>
      <p class="text-gray-600">Likes: <%= post.likes_counter %></p>
    </li>
  <% end %>
</ul>

