<div class="max-w-3xl mx-auto p-4">
  <h1 class="text-3xl font-semibold mb-4">All Posts</h1>
  <div class="mt-8">
    <% @posts.each do |post| %>

<div class="bg-white shadow-md p-6 rounded-lg mb-4">
  <div class="flex items-center justify-between mb-3">
    <div class="flex items-center space-x-4">
      <div class="w-12 h-12 rounded-full overflow-hidden">
        <%= image_tag(post.author.photo, class: 'w-full h-full object-cover rounded-full user-profile') %>
      </div>
      <div class="mb-4 flex gap-4 items-center">
        <h2 class="text-xl font-semibold"><%= post.author.name %></h2>
        <p class="text-gray-600"><strong><%= pluralize(post.author.posts.count, 'Post') %></strong></p>
      </div>
    </div>
  </div>
  <h2 class="text-2xl font-semibold mb-2">

<%= link_to post.title, post, class: 'text-blue-500 hover:underline' %>
</h2>

<p class="text-gray-700 mb-2"><%= truncate(post.text, length: 150) %></p>
<div class="flex justify-between mt-2">
  <div class="flex flex-row justify-center items-end gap-4">
    <p><strong>Comments:</strong> <%= post.comments_counter%></p>
    <p><strong>Likes:</strong> <%= post.likes_counter %></p>
  </div>
  <a href="<%= post_path(post) %>" class="text-blue-500 hover:underline">Read More</a>
</div>
<div class="mt-4">
  <h4 class="text-lg font-semibold mb-2">Recent Comments</h4>
  <% post.comments.order(created_at: :desc).limit(5).each do |comment| %>
    <div class="mb-2">
      <p><strong><%= comment.user.name %>:</strong> <%= comment.text %></p>
    </div>
  <% end %>
</div>
</div>
<% end %>

</div>
<div class="mt-4 flex justify-center items-center">
  <%= link_to 'Paginate', '#', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
</div>
</div>


